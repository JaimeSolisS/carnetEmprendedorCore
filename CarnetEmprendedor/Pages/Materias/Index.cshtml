@page
@model CarnetEmprendedor.Pages.Materias.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h2>Carreras</h2>

<p>
    <a asp-page="Create" class="btn">Añadir carrera</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                Carrera
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Materia) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nombre)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.Id" class="btn btn-sm btn-success glyphicon glyphicon-pencil"></a> |
                <a asp-page="./Delete" asp-route-id="@item.Id"  class="btn btn-danger btn-sm glyphicon glyphicon-trash"></a>
            </td>
        </tr>
}
    </tbody>
</table>
