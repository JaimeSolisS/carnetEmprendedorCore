@page
@model CarnetEmprendedor.Pages.Usuarios.CreateModel

@{
    ViewData["Title"] = "Create";
}

<h2>Nuevo Usuario</h2>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <input asp-for="Usuario.IdentityUserId" type="hidden" class="form-control" />
                <span asp-validation-for="Usuario.Matricula" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input asp-for="Usuario.IdentityUserName" type="hidden"  class="form-control" />
                <span asp-validation-for="Usuario.Matricula" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Usuario.Matricula" class="control-label"></label>
                <input asp-for="Usuario.Matricula" class="form-control" />
                <span asp-validation-for="Usuario.Matricula" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Usuario.Nombre" class="control-label"></label>
                <input asp-for="Usuario.Nombre" class="form-control" />
                <span asp-validation-for="Usuario.Nombre" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Usuario.ApellidoP" class="control-label"></label>
                <input asp-for="Usuario.ApellidoP" class="form-control" />
                <span asp-validation-for="Usuario.ApellidoP" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Usuario.ApellidoM" class="control-label"></label>
                <input asp-for="Usuario.ApellidoM" class="form-control" />
                <span asp-validation-for="Usuario.ApellidoM" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Usuario.MateriaId" class="control-label"></label>
                <select asp-for="Usuario.MateriaId" class="form-control" asp-items="ViewBag.MateriaId"></select>
            </div>
            <div class="form-group">
                <label asp-for="Usuario.Semestre" class="control-label"></label>
                <select asp-for="Usuario.Semestre" asp-items="Html.GetEnumSelectList<Usuario.ESemestre>()" class="form-control"></select>
                <span asp-validation-for="Usuario.Semestre" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input asp-for="Usuario.Puntos" type="hidden" value="0" class="form-control" />
                <span asp-validation-for="Usuario.Puntos" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Crear" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

