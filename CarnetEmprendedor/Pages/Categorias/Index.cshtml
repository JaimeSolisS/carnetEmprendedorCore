@page
@model CarnetEmprendedor.Pages.Categorias.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h2>Categorías</h2>

<p>
    <a asp-page="Create">Añadir Categoría</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Categoria[0].CategoriaEvento)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Categoria[0].Puntos)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Categoria) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.CategoriaEvento)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Puntos)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.Id" class="btn btn-sm btn-success glyphicon glyphicon-pencil"></a> |
                @*<a asp-page="./Details" asp-route-id="@item.Id">Details</a> |*@
                <a asp-page="./Delete" asp-route-id="@item.Id"  class="btn btn-danger btn-sm glyphicon glyphicon-trash"></a>
            </td>
        </tr>
}
    </tbody>
</table>
