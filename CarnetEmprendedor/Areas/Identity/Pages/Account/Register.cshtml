@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}

<h2>@ViewData["Title"]</h2>

<div class="row">
    <div class="col-md-4">
        <form asp-route-returnUrl="@Model.ReturnUrl" method="post">
            <h4>Create a new account.</h4>
            <hr />
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Input.Email"></label>
                <input asp-for="Input.Email" class="form-control" />
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.Matricula"></label>
                <input asp-for="Input.Matricula" class="form-control" />
                <span asp-validation-for="Input.Matricula" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.Nombre"></label>
                <input asp-for="Input.Nombre" class="form-control" />
                <span asp-validation-for="Input.Nombre" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.ApellidoP"></label>
                <input asp-for="Input.ApellidoP" class="form-control" />
                <span asp-validation-for="Input.ApellidoP" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.ApellidoM"></label>
                <input asp-for="Input.ApellidoM" class="form-control" />
                <span asp-validation-for="Input.ApellidoM" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.Materia"></label>
                <input asp-for="Input.Materia" class="form-control" />
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.Semestre"></label>
                <input asp-for="Input.Semestre" class="form-control" />
                <span asp-validation-for="Input.Semestre" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.Puntos"></label>
                <input asp-for="Input.Puntos" class="form-control" />
                <span asp-validation-for="Input.Puntos" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.Password"></label>
                <input asp-for="Input.Password" class="form-control" />
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.ConfirmPassword"></label>
                <input asp-for="Input.ConfirmPassword" class="form-control" />
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-default">Register</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
